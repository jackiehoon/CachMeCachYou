<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kism.iotsw1502.cachmecachyou.MainActivity"
    android:background="#262020">

    <EditText
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:id="@+id/input_nick"
        android:textSize="30dp"
        android:textColor="#f7f7f7"
        android:hint="이름,닉네임"
        android:background="@null"
        android:textColorHint="#f7f7f7"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clickbtn"
        android:src="@drawable/bluetoothicon"
        android:background="#262020"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:src="@drawable/applogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/result"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="블루투스를 연결해주세요."
        android:id="@+id/textView2"
        android:layout_above="@+id/clickbtn"
        android:layout_centerHorizontal="true"
        android:textColor="#f7f7f7"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gaim"
        android:id="@+id/game_btn"
        android:layout_alignTop="@+id/result"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
